@model IEnumerable<OnlineMenu.Service.ViewModels.VMItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Menu Items</h2>

<p>
    <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("Create", "ItemsCategory", new {categoryId = ViewBag.CategoryId })';return false;">
        <span class="fa fa-plus-circle"></span> Create
    </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vegan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vegetarian)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GlutenFree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChefRecommendation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceSmall)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceBig)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sequence)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vegan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vegetarian)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GlutenFree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChefRecommendation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceSmall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceBig)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sequence)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>